{
    "manifest_version": 3,
    "name": "Monitor de Temas Digitales",
    "version": "1.0",
    "description": "Monitoriza los temas destacados en medios digitales",
    "permissions": ["storage"],
    "host_permissions": ["https://*.render.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }